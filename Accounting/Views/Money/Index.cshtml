@model Accounting.Models.ViewModels.MoneyViewModel

@{
    ViewBag.Title = "我的記帳本";
    Layout = "~/Views/Shared/_MoneyLayout.cshtml";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <label for="Category" class="control-label col-sm-2">類別</label>
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.SelectedTypes,
                    new SelectListItem[] {
                        new SelectListItem() { Text = "請選擇", Value = "" },
                        new SelectListItem() { Text = "收入", Value = "0" },
                        new SelectListItem() { Text = "支出", Value = "1" } }, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            <label for="Amount" class="control-label col-sm-2">金額</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Money, new { htmlAttributes = new { @class = "form-control", @placeholder = "金額" } })
                @Html.ValidationMessageFor(model => model.Money, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label for="Date" class="control-label col-sm-2">日期</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Date, new { htmlAttributes = new { @class = "form-control", @placeholder = "yyyy-MM-dd" } })
                @Html.ValidationMessageFor(model => model.Date, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label for="Remark" class="control-label col-sm-2">備註</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Note, new { htmlAttributes = new { @class = "form-control", @rows = "5" } })
                @Html.ValidationMessageFor(model => model.Note, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<hr />
<div class="row">
    <div class="col-md-offset-2 col-md-10">
        @Html.Action("ShowHistory")
    </div>
</div>

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
